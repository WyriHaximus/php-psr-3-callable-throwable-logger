{
  "name": "wyrihaximus/psr-3-callable-throwable-logger",
  "description": "callable throwable decorator around a PSR-3 logger (to be used with react/promise and reactivex/rxphp)",
  "license": "MIT",
  "authors": [
    {
      "name": "Cees-Jan Kiewiet",
      "email": "ceesjank@gmail.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "psr/log": "^1 || ^2 || ^3"
  },
  "require-dev": {
    "wyrihaximus/makefiles": "^0.7.10",
    "wyrihaximus/psr-3-utilities": "^2.2.0",
    "wyrihaximus/test-utilities": "^8.6.0"
  },
  "autoload": {
    "psr-4": {
      "WyriHaximus\\PSR3\\CallableThrowableLogger\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WyriHaximus\\Tests\\PSR3\\CallableThrowableLogger\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "icanhazstring/composer-unused": true,
      "infection/extension-installer": true,
      "ocramius/package-versions": true,
      "phpstan/extension-installer": true,
      "wyrihaximus/makefiles": true,
      "wyrihaximus/test-utilities": true
    },
    "platform": {
      "php": "8.4.13"
    },
    "sort-packages": true
  },
  "scripts": {
    "post-install-cmd": [
      "make on-install-or-update || true"
    ],
    "post-update-cmd": [
      "make on-install-or-update || true"
    ]
  }
}
